a=' жизнь, чяща, машина, жыла, тишина, щявель, чайник, нашывка'
def g():
    for i in range(len(a)):
        if (a[i]=='ж' or a[i]=='ш') and a[i+1]=='ы':
            print ('Ошибка жи/ши')
            print(i,a[i],i+1,a[i+1])
        elif (a[i]=='ч' or a[i]=='щ') and a[i+1]=='я':
            print ('Ошибка ча/ща')
            print(i,a[i],i+1,a[i+1])
g()
